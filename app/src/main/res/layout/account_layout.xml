<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/account_details_title"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="ACCOUNT DETAILS"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/account_layout_1"
            android:layout_margin="10dp"
            android:layout_below="@+id/account_details_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_user_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:text="Dennis"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_layout_2"
            android:layout_margin="10dp"
            android:layout_below="@+id/account_layout_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Email"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_user_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@android:color/transparent"
                android:text="wakahiad@gmail.com"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_layout_3"
            android:layout_margin="10dp"
            android:layout_below="@+id/account_layout_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Phone"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_user_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:text="0799566927"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_layout_4"
            android:layout_margin="10dp"
            android:layout_below="@+id/account_layout_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Password"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_user_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:text="*******"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_layout_5"
            android:layout_margin="10dp"
            android:layout_below="@+id/account_layout_4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="ConfirmPassword"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_user_confirm_pass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:text="*********"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>