<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ResultsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/results_title"
            android:text="TEST RESULTS"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/results_list"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/results_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/test_layout_1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/attempts_txt_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="attempts"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/attempts_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="attempts"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_layout2"
                android:layout_below="@id/test_layout_1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/imsi_value"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="18sp"
                    android:text="imsi"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/imsi_state"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="imsi"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_layout3"
                android:padding="10dp"
                android:layout_below="@id/test_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/device_id_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Device id"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/device_id_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Device id"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_layout4"
                android:layout_below="@id/test_layout3"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voltage_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="voltage"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/voltage_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="voltage"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_layout5"
                android:layout_below="@id/test_layout4"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/calibration_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="calibration"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/calibration_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="calibration"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_layout6"
                android:layout_below="@id/test_layout5"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_time_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="datetime"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/date_time_value"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="18sp"
                    android:text="datetime"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </RelativeLayout>

        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/send_report_btn"
            android:layout_below="@id/results_list"
            android:text="Send Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/scan_another_device"
            android:layout_below="@id/send_report_btn"
            android:text="Scan another device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</FrameLayout>